local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Kris Hub by Grok",
   LoadingTitle = "Cargando Kris Hub...",
   LoadingSubtitle = "Hecho por Grok xAI (2025)",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "KrisHub",
      FileName = "KrisConfig"
   },
   Discord = {
      Enabled = false
   },
   KeySystem = false
})

local MainTab = Window:CreateTab("üì± Hubs Principales", 4483362458)
local FarmTab = Window:CreateTab("üåü Farm & Combat")
