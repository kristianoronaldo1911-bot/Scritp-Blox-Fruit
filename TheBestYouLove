-- M√°s en Discord o actualizaciones

FarmTab:CreateSection("Funciones B√°sicas (Extras)")

local AutoFarmToggle = FarmTab:CreateToggle({
   Name = "Auto Farm Level (B√°sico)",
   CurrentValue = false,
   Callback = function(Value)
      _G.AutoFarm = Value
      spawn(function()
         while _G.AutoFarm do
            pcall(function()
               -- C√≥digo b√°sico auto farm (mejora con hubs arriba)
               local args = { [1] = "StartQuest", [2] = "DemoSeaQuest", [3] = "1" }
               game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer(unpack(args))
            end)
            wait(1)
         end
      end)
   end,
})

PlayerTab:CreateSection("Mods Jugador")

local WalkSpeedSlider = PlayerTab:CreateSlider({
   Name = "WalkSpeed",
   Range = {16, 200},
   Increment = 1,
   CurrentValue = 16,
   Callback = function(Value)
      if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
         game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
      end
   end,
})

local JumpPowerSlider = PlayerTab:CreateSlider({
   Name = "Jump Power",
   Range = {50, 200},
   Increment = 1,
   CurrentValue = 50,
   Callback = function(Value)
      if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
         game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value
      end
   end,
})

local InfJumpToggle = PlayerTab:CreateToggle({
   Name = "Infinite Jump",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().InfJump = Value
      if Value then
         game:GetService("UserInputService").JumpRequest:Connect(function()
            game:GetService("Players").LocalPlayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
         end)
      end
   end,
})

TeleTab:CreateSection("Teleports B√°sicos")

local TPInput = TeleTab:CreateInput({
   Name = "Teleport a Pos (X,Y,Z)",
   PlaceholderText = "0, 0, 0",
   Callback = function(Text)
      local pos = Text:split(",")
      if #pos == 3 then
         game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(tonumber(pos[1]), tonumber(pos[2]), tonumber(pos[3]))
      end
   end,
})

Rayfield:Notify({
   Title = "¬°Kris Hub Cargado!",
   Content = "Disfruta farming con Grok üöÄ",
   Duration = 5,
   Image = 4483362458
})
